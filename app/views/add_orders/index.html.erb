    <%= form_tag(search_page_path, :method => "get", class: 'navbar-form navbar-left') do %>
      <div class="input-group">
        <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control" ,:style => 'width: 350px'%>
        <%= submit_tag("Add", width:"100px") %>
        <div class="input-group-btn">


        </div>
      </div>
    <% end %>

    <div class="action row">
      <div class="col-sm-10">
        <div class="form-group form-button">
          <input type="submit" value="Publish" width="50"/>
        </div>
      </div>
    </div>

<% end %>


<%= link_to 'Back', orders_path %>


</div>

