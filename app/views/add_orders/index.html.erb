<head>
  <link rel="stylesheet" href="/css/add_orders.css">
</head>
<body>
<div class="main">

  <!-- Sign up form -->
  <section class="signup">
    <div class="container">
      <div class="signup-content">
        <div class="signup-form">
<%= form_for(@order ,url: "/add") do |f| %>

  <div class="alert alert-success center" role="alert">

    <div class="form-group row">
      <div class="col-sm-10">


