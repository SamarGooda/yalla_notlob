    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <%= f.text_field :resturant, {:class => 'form-control friend-head-add', :placeholder => "Enter Restaurant" ,:style => 'width: 350px'} %>
      </div>
    </div>

    <div class="field">
      <ul id="added">

      </ul>
    </div>

    <div class="custom-file">

      <%= f.label :img do  %>
      <%= f.file_field :img %>

      <%end%>
    </div>
