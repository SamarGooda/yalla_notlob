        <title>Yalla Notlob- Login</title>
		<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
		<link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
		<link rel="stylesheet" href="/css/auth.css">
    </head>
    <body>
        <div class="container">
           
            <header>
             
				
            </header>
            <section>				
                <div id="container_demo" >
                    <a class="hiddenanchor" id="toregister"></a>
                    <a class="hiddenanchor" id="tologin"></a>
                    <div id="wrapper">
                        <div id="login" class="animate form">
                        <% if  notice %>
                        <h4 class="alert alert-warning"><%= notice %></h4>
                        <% end %>
                                <h1>Log in</h1> 
                                <%= form_tag '/login' do %>
  
                                <p> 
                                    <label  class="uname" > Your email </label>
                                    <%= text_field_tag :email %>
                                </p>
                                <p> 
                                    <label for="password" class="youpasswd"> Your password </label>
                                    <%= password_field_tag :password %>
                                </p>
                                <p class="keeplogin"> 
									<input type="checkbox" name="loginkeeping" id="loginkeeping" value="loginkeeping" /> 
									<label for="loginkeeping">Keep me logged in</label>
								</p>
                                <p class="login button"> 
                                <%= submit_tag "Login"%>
								</p>
                                <p class="change_link">
                                    Not a member yet ?
                                
									<a href="#toregister" class="to_register">Join us</a>
                                </p>
                                <%end%>
                        </div>

                        <div id="register" class="animate form">
                    
                                <h1> Sign up </h1> 
                                <%= form_with(model: @user, local: true, url: "/register") do |f|%>
                                    <% if @user.errors.any? %>
                                    <div id="error_explanation">
                                      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this post from being saved:</h2>
                                
                                      <ul>
                                      <% @user.errors.full_messages.each do |message| %>
                                        <li><%= message %></li>
                                      <% end %>
                                      </ul>
                                    </div>
                                  <% end %>                             
                                <p> 
                                    <label  class="uname" >first name</label>
                                    <%= f.text_field :fname, placeholder: "Ahmed" %>
                                </p>
                                <p> 
                                    <label  class="uname" >last name</label>
                                    <%= f.text_field :lname, placeholder: "Emad" %>
                                </p>
                                <p> 
                                    <label for="emailsignup" class="youmail"  > Your email</label>
                                    <%= f.email_field :email, placeholder: "mysupermail@mail.com" %>
                                </p>
                                <p> 
                                    <label for="passwordsignup" class="youpasswd" >Your password </label>
                                    <%= f.password_field :password, placeholder: "eg. X8df!90EO", required: true, pattern: '.{3,}' %>
                                </p>
                                <p> 
                                    <label for="passwordsignup_confirm" class="youpasswd" >Please confirm your password </label>
                                    <%= f.password_field :password_confirmation, placeholder: "eg. X8df!90EO",required: true, pattern: '.{3,}' %>
                                </p>
                                <p class="signin button"> 
									<input type="submit" value="Sign up"/> 
								</p>
                                <p class="change_link">  
									Already a member ?
									<a href="#tologin" class="to_register"> Go and log in </a>
								</p>
                            <%end%>
                        </div>
						
                    </div>
                </div>  
            </section>
        </div>
    </body>
</html>