<div id="fh5co-menus" data-section="menu">
<div class="container">
    <div class="row text-center fh5co-heading row-padded">
        <div class="col-md-8 col-md-offset-2">
            <h2 class="heading to-animate">Dashboard</h2>
            <p class="sub-heading to-animate">Order your favorite foods with your friends </p>
        </div>
    </div>
    <div class="row row-padded">
        <div class="col-md-6">
            <div class="fh5co-food-menu to-animate-2">
                <h2 class="fh5co-drinks">Latest orders</h2>
                <ul>
                <% @orders.each do |order| %>
                    <li>
                        <div class="fh5co-food-desc">
                            <figure>
                                <img src="/images/res_img_5.jpg" class="img-responsive">
                            </figure>
                            <div>
                            <h3><a href="/orders/<%= order.id.to_s %>"><%= order.kind  %></a></h3>
                                <p><%= localize(order.created_at, :format => :long) %></p>
                            </div>
                        </div>
                    
                    </li>
             
                    <% end %>
              
                </ul>
            </div>
        </div>
        <div class="col-md-6">
            <div class="fh5co-food-menu to-animate-2">
                <h2 class="fh5co-dishes">Latest activities</h2>
                <ul>
                <% @activities.each do |activity| %>
                    <li>
                        <div class="fh5co-food-desc">
                            <figure>
                                <img src="/images/res_img_5.jpg" class="img-responsive">
                            </figure>
                            <div>
                                <h3><a href="/orders/<%= activity.order_id.to_s %>"><%= activity.action %></a></h3>
                                <p><%= localize(activity.created_at, :format => :long) %></p>
                            </div>
                        </div>
                    
                    </li>
             
                    <% end %>
                </ul>
            </div>
        </div>
  
    </div>
 
</div>
</div>


